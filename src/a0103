public class Fahrerlaubnis{

	public static void main(String[] args) {

             int alter = 15;
	
             if(alter < 14){
                 System.out.println(„Du darfst kein Mofa fahren“);
             }else if(alter >= 14 && alter < 16){
                 System.out.println(„Du darfst Mofa, aber kein Auto    fahren“);
             }else if(alter >= 16 && alter < 18){
                 System.out.println(„Du darfst immer noch kein Auto fahren, aber Moped und Mofa“);
             }else if(alter >= 18){
                 System.out.println(„Du darfst Auto fahren“);
             }
        }
          
}
